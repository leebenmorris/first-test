{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "mocha": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [],
  "rules": {
    "no-console": "off",
    "space-before-blocks": "warn",
    "arrow-spacing": "warn",
    "keyword-spacing": "warn",
    "space-infix-ops": "warn",
    "space-in-parens": "warn",
    "spaced-comment": "warn",
    "space-before-function-paren": "off",
    "semi": "warn",
    "quotes": "off",
    "object-curly-spacing": "off",
    "no-multiple-empty-lines": "warn"
  }
}